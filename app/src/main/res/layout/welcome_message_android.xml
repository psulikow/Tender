<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/welcome_message_layout"

        android:layout_margin="16dp"
        android:padding="16dp"

        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/grid"

        android:visibility="visible">

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Welcome to TENDER"
            android:textColor="#04CE86"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcome_messgae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_title"
            android:text="Tender is an app where you can choose through pictures of food and pick which one you would like to make.  \n\nIf you are ready to get started click the LETS GET STARTED button and lets get to know what exaclty you have a taste for today!"
            android:textColor="#999"
            android:textSize="18sp" />

        <ImageView android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="155dp"
            android:maxHeight="155dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/flat"
            />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#5bc0de"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Let's get started!"
            android:textColor="#fff" />

        <Button
            android:id="@+id/about_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:background="#5bc0de"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="About Us"
            android:textColor="#fff" />
    </RelativeLayout>
</RelativeLayout>